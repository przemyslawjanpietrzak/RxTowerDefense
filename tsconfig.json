{
    "compilerOptions": {
      "sourceMap": true,
      "lib": [
        "dom",
        "es5",
        "es2018"
      ],
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true
    },
    "baseUrl": "types",
    "typeRoots": ["types"],
    "files": [
      "src/main.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ]
}